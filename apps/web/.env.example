# =============================================================================
# Somar Web Application - Environment Configuration
# =============================================================================
# Copy this file to .env.development, .env.production, or .env.demo and fill in values.


# -----------------------------------------------------------------------------
# Better Auth Configuration
# -----------------------------------------------------------------------------
BETTER_AUTH_SECRET="your-super-secret-key-at-least-32-characters-long"
BETTER_AUTH_URL="http://localhost:3000"

# Public URL for client-side auth
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# Google OAuth
# Get credentials from: https://console.cloud.google.com/apis/credentials
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# -----------------------------------------------------------------------------
# Plaid Configuration
# Get credentials from: https://dashboard.plaid.com/developers/keys
# -----------------------------------------------------------------------------
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-sandbox-secret"
PLAID_ENV="sandbox"

# -----------------------------------------------------------------------------
# Blob Storage Configuration
# -----------------------------------------------------------------------------
STORAGE_TYPE="filesystem"
DATA_DIR="./data"

# -----------------------------------------------------------------------------
# OpenAI (for AI-powered deduplication)
# -----------------------------------------------------------------------------
OPENAI_API_KEY="sk-your-openai-api-key"
